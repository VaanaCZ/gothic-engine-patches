#engine [G1]
    #patch [SWIM_2_HANG fix]
        #assembler [callClimbLedge]
            mov     ecx, [0x0086CCA0] ; zinput
            mov     edx, [ecx]
            push    3
            call    dword ptr [edx+4]
            call    0x00777558        ; __ftol
            cmp     eax, ebx
            jz      0x006137D7
            mov     ecx, esi
            call    0x006292D0        ; Swim_ClimbLedge
//            mov     ebx, 1
//            mov     [esi+131Ch], ebx
            jmp     0x006137D7
        #/assembler

        #assembler [0x006137AD]
            mov     ecx, esi
            call    0x00629290        ; Swim_CanClimbLedge
            test    eax, eax
            jnz     $callClimbLedge
            orgcode
        #/assembler
        
        #assembler [0x00751711]
            mov     ecx, [esi+9B8h]
            call    0x00746650        ; GetActionMode
            cmp     eax, 5
            jnz     end
            mov     ecx, [esi+9B8h]
            call    0x006292D0        ; Swim_ClimbLedge
            jmp     0x00751693
        end:
            orgcode
        #/assembler
        
        INT memString = CreateMemString("T_SWIM_2_HANG")
        
        #assembler [0x0062C1F0]
            mov     esi, ecx
            mov     ecx, [esi+68h]
            push    $memString
            call    0x0047EC50        ; GetAniIDFromAniName
            mov     ecx, [esi+68h]
            push    eax
            call    0x0046D1E0        ; GetAniFromAniID
            mov     ecx, [esi+68h]
            push    eax
            call    0x0046D220        ; IsAniActive
            test    eax, eax
            jz      end
            ret
        end:
            mov     ecx, esi
            orgcode
        #/assembler
    #/patch
#/engine

